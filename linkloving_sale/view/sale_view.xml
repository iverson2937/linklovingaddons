<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="linkloving_view_order_tree" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <field name="date_order" position="replace">
                    <field name="pi_number"/>
                    <field name="team_id"/>
                    <field name="validity_date" widget="date" string="交货日期"/>
                </field>

                <field name="invoice_status" position="attributes">
                    <attribute name="string">对账状态</attribute>
                </field>
                <field name="invoice_status" position="before">
                    <field name="shipping_status" string="出货状态" invisible="1"/>
                    <field name="shipping_rate" widget="progressbar"/>
                </field>
            </field>
        </record>

        <record id="sale.action_orders" model="ir.actions.act_window">
            <field name="name">Sales Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
            <field name="context">{}</field>
            <field name="domain">[('state', 'not in', ('draft', 'sent'))]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a Quotation, the first step of a new sale.
                </p>
                <p>
                    Once the quotation is confirmed, it becomes a sales order.
                    You'll be able to invoice it and collect payments.
                    From the <i>Sales Orders</i> menu, you can track delivery
                    orders or services.
                </p>
            </field>
        </record>

        <record id="linkloving_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                    <attribute name="domain">[('parent_id','=',partner_id),('type','=','invoice')]</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="replace">
                    <button name="action_cancel" type="object" string="取消订单"
                            attrs="{'invisible':['|',('state','not in',('draft','sent','sale')),('shipping_status','!=','no')]}"
                            confirm="确定取消订单吗？"/>


                    <!--<button name="recompute_receive_amount" states="" type="object" string="调整数量"-->
                    <!--confirm="调整数量吗？" groups="base.group_erp_manager"/>-->
                </xpath>

                <xpath expr="//button[@name='action_done']" position="replace">
                    <button name="action_done" states="sale" type="object" string="标记完成"
                            confirm="确定标记为完成吗？"/>
                    <button name="button_cancel_sale_order" states="done" type="object" string="取消标记完成"/>
                </xpath>


                <xpath expr="//field[@name='validity_date']" position="replace">
                    <field name="validity_date" string="交货日期" attrs="{'required':[('state','in',['draft','sent'])]}"/>
                    <field name="shipping_status" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>

                <xpath expr="//tree/field[@name='analytic_tag_ids']" position="replace">
                </xpath>
                <xpath expr="//tree/field[@name='price_unit']" position="after">
                    <field name="shipping_status" invisible="1"/>
                </xpath>
                <xpath expr="//tree/field[@name='name']" position="replace">
                    <field name="name" invisible="1"/>
                </xpath>
                <!--<xpath expr="//tree/field[@name='product_id']" position="after">-->
                <!--<field name="product_specs"/>-->
                <!--</xpath>-->

                <xpath expr="//tree/field[@name='product_id']" position="replace">
                    <field name="product_id" options="{'no_create': True}"/>
                    <field name="inner_code" string="国内简称" readonly="1"/>
                    <field name="inner_spec" string="国内型号" readonly="1"/>
                    <field name="qty_available"/>
                </xpath>
                <xpath expr="//tree/field[@name='tax_id']" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" domain="[('customer','=',True),('is_company','=',True)]"
                           options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="domain">[('parent_id','=',partner_id),('type','=','delivery')]</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
                <xpath expr="//div[@name='carrier_selection']" position="after">
                    <field name="remark"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="replace">
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="user_id" options="{'no_create':True}"/>
                </xpath>

                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', 'in', ('done', 'cancel','sale'))]}</attribute>
                </xpath>


                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="tax_id"
                           domain="[('type_tax_use','&lt;&gt;','purchase')]" string="税金"
                           attrs="{'readonly': [('state', '!=', 'draft')]}" required="1"/>
                </xpath>
                <xpath expr="//field[@name='amount_untaxed']" position="before">
                    <field name="product_count" string="总数量"/>
                </xpath>
                <field name="partner_shipping_id" position="after">
                    <field name="pi_number"/>
                    <field name="is_emergency" attrs="{'readonly': [('state', '==', 'done')]}" invisible="1"/>
                </field>
                <xpath expr="//tree/field[@name='sequence']" position="replace">
                </xpath>

                <xpath expr="//button[@name='action_view_invoice']" position="before">
                    <field name="picking_ids" invisible="1"/>
                    <button type="object"
                            name="action_view_question"
                            context="{'sale_type': 'question'}"
                            class="oe_stat_button"
                            icon="fa-commenting-o"
                            attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="base.group_user">
                        <field name="question_record_count" widget="statinfo" string="问题记录"/>
                    </button>


                    <button type="object"
                            name="action_view_question"
                            context="{'sale_type': 'inspection'}"
                            class="oe_stat_button"
                            icon="fa-file-o"
                            attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="base.group_user">
                        <field name="inspection_report_count" widget="statinfo" string="验货报告"/>
                    </button>
                </xpath>

                <xpath expr="//div/field[@name='message_ids']" position="replace">
                    <field name="message_ids" widget="sale_threads"/>
                </xpath>

            </field>
        </record>


        <record id="product_template_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="context">{"search_default_filter_to_sell":1}</field>
            <field name="view_ids" eval="[(5,0,0),
            (0,0,{'view_mode':'tree', 'view_id': ref('linkloving_sale.product_template_tree_ol')}),
            (0,0,{'view_mode':'form', 'view_id': ref('product.product_template_only_form_view')})]"/>
        </record>


        <record id="linkloving_view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='phone']" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
                <xpath expr="//field[@name='email']" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>

                <xpath expr="//field[@name='phone']" position="before">
                    <field name="level" invisible="1"/>
                    <field name="customer_write_date" string="最近操作时间"/>
                </xpath>

            </field>
        </record>

        <record id="sale.action_quotations" model="ir.actions.act_window">
            <field name="name">Quotations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="sale.view_quotation_tree"/>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_quotation"/>
            <field name="context">{'hide_sale': True}</field>
            <field name="domain">[('state','in',['draft','sent'])]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a Quotation, the first step of a new sale.
                </p>
                <p>
                    Your next actions should flow efficiently: confirm the Quotation
                    to a Sale Order, then create the Invoice and collect the Payment.
                </p>
                <p>
                    Note that once a Quotation becomes a Sale Order, it will be moved
                    from the Quotations list to the Sales Order list.
                </p>
            </field>
        </record>

        <record id="sale_order_view_search_inherit_pi_number" model="ir.ui.view">
            <field name="name">sale.order.search.inherit.number</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                    <field name="pi_number" filter_domain="[('pi_number','ilike',self)]"/>
                </xpath>

                <xpath expr="//filter[@name='message_needaction']" position="after">
                    <separator/>
                    <filter string="未出货" domain="[('shipping_rate','=',0)]" name="shipping_rate"/>
                    <filter string="部分出货"
                            domain="['&amp;', ('shipping_rate','&gt;', 0), ('shipping_rate', '&lt;', 100)]"
                            name="shipping_rate"/>
                    <filter string="出货完成" domain="[('shipping_rate','&gt;=',100)]" name="shipping_rate"/>
                    <separator/>
                </xpath>


            </field>
        </record>


        <template id="sale_static" name="linkloving_sale_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">

                <script type="text/javascript" src="/linkloving_sale/static/src/js/sale_chatters.js"/>

            </xpath>
        </template>


        <menuitem
                id="menu_order_point"
                parent="sales_team.menu_base_partner"
                sequence="1" name="产品看板"/>


        <record id="view_sale_order_line_form" model="ir.ui.view">
            <field name="name">sale.order.line.form</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <form string="Sales Order" class="o_sale_order">
                    <sheet>
                        <group>
                            <group>
                                <field name="order_id" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="salesman_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="product_uom_qty" readonly="1"/>
                                <field name="qty_delivered" readonly="1"/>
                                <field name="qty_invoiced" readonly="1"/>
                                <field name="price_subtotal" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="remark"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_sales_order_line_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.select</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="validity_date"/>
                </xpath>
                <xpath expr="//field[@name='salesman_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='qty_to_invoice']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='qty_invoiced']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_uom']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='price_subtotal']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='price_subtotal']" position="after">
                    <field name="remark"/>
                </xpath>


            </field>
        </record>


        <record id="view_sales_order_line_filter_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.select</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_sales_order_line_filter"/>
            <field name="arch" type="xml">


                <xpath expr="//field[@name='order_id']" position="before">
                    <filter string="未发货完成" domain="[('shipping_status','!=', 'done'),('state','=', 'sale')]"/>
                </xpath>
            </field>
        </record>


        <menuitem action="sale.action_orders_upselling"
                  id="sale.menu_sale_order_upselling" parent="sale.menu_sale_invoicing"
                  groups="base.group_no_one"
                  sequence="5"/>


    </data>
</openerp>
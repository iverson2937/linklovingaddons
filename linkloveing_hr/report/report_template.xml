<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="report_account_employee_payment">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-if="o.state in ['approve','paid']">
                        <t t-call="report.internal_layout">
                            <div class="page">
                                <div class="oe_structure"/>

                                <h2>暂支申请单</h2>

                                <div class="row mt32 mb32">
                                    <div class="col-xs-2">
                                        <strong>员工:</strong>
                                        <p t-field="o.employee_id.name"/>
                                    </div>
                                    <div t-if="o.employee_id.bank_account_id" class="col-xs-2">
                                        <strong>开户行</strong>
                                        <p t-field="o.employee_id.bank_account_id.bank_id"/>
                                    </div>
                                    <div class="col-xs-3">
                                        <strong>账号:</strong>
                                        <p t-field="o.employee_id.bank_account_id.acc_number"/>

                                    </div>

                                    <!--<div class="col-xs-1">-->
                                    <!--<strong>:</strong>-->
                                    <!--<p t-field="o.ta是否含税x_id"/>-->

                                    <!--</div>-->
                                    <!--<div class="col-xs-12">-->
                                    <!--<strong>备注:</strong>-->
                                    <!--<p t-field="o.remark"/>-->

                                    <!--</div>-->
                                </div>
                                <table class="table table-condensed table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="text-center">单号</th>
                                            <th class="text-center">日期</th>

                                            <!--<th class="text-center">金额</th>-->
                                            <th class="text-center">备注</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td t-if="o.name" class="text-center">
                                                <p t-field="o.name"/>

                                            </td>
                                            <td t-if="o.apply_date" class="text-center">
                                                <p t-field="o.apply_date"/>

                                            </td>

                                            <td t-if="o.remark" class="text-center">
                                                <p t-field="o.remark"/>
                                            </td>


                                        </tr>
                                    </tbody>
                                </table>

                                <div class="row">
                                    <div class="col-xs-6">

                                    </div>
                                    <div class="col-xs-2">

                                        <strong t-esc="in_amount"></strong>
                                    </div>

                                    <div class="col-xs-2">
                                        <strong t-esc="out_amount"></strong>
                                    </div>
                                    <div class="col-xs-2 pull-right">
                                        <table class="table table-condensed">
                                            <tr class="border-black">
                                                <td>
                                                    <strong>Total</strong>
                                                </td>
                                                <td class="text-right">
                                                    <strong t-esc="o.amount"></strong>

                                                </td>
                                            </tr>
                                            <tr>

                                            </tr>
                                        </table>
                                    </div>
                                </div>

                                <!--<div class="col-xs-3">-->
                                <!--<strong>总经理:</strong>-->
                                <!--</div>-->
                                <!--<div class="col-xs-3">-->
                                <!--<strong>财务:</strong>-->
                                <!--</div>-->
                                <!--<div class="col-xs-3">-->
                                <!--<strong>部门主管:</strong>-->
                                <!--</div>-->
                                <!--<div class="col-xs-3">-->
                                <!--<strong>制单人:</strong>-->
                                <!--<span t-field="o.create_uid.name"></span>-->
                                <!--</div>-->


                                <div class="row">
                                    <div class="col-xs-offset-9">
                                        <strong>制单人:</strong>
                                        <span t-field="o.create_uid.name"></span>
                                    </div>
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="col-xs-3">
                                        <strong>总经理:</strong>
                                        <img t-if="o.remark_comments_ids[-1]"
                                             t-att-src="'data:image/png;base64,%s' % o.remark_comments_ids[-1].create_uid.employee_ids[0].signature"
                                             style="position:absolute; z-index:2;top: 0;width: 48%;"/>
                                    </div>
                                    <div class="col-xs-3">
                                        <strong>财务:</strong>
                                    </div>
                                    <div class="col-xs-3">
                                        <strong>部门主管:</strong>
                                    </div>
                                    <div class="col-xs-offset-9">
                                        <strong>收款人:</strong>
                                        <!--<span t-field="o.create_uid.name"></span>-->
                                    </div>
                                </div>
                                <div class="oe_structure"/>

                                <br/>
                                <br/>
                                <div class="row">
                                    <div class="col-xs-6">
                                        <strong>以下是送审记录</strong>
                                    </div>
                                </div>
                                <table class="table table-condensed">
                                    <div class="row">
                                        <t t-set="i" t-value="1"/>
                                        <tr t-foreach="o.remark_comments_ids" t-as="lines">
                                            <td>
                                                <span t-esc="i"/>
                                            </td>
                                            <t t-set="i" t-value="i+1"/>
                                            <td>
                                                <span t-field="lines.body"/>:
                                                <span t-field="lines.create_uid"/>-->

                                                <span t-field="lines.target_uid"/>;
                                                <span t-field="lines.create_date"/>
                                            </td>
                                        </tr>
                                    </div>
                                </table>


                            </div>
                        </t>
                    </t>
                    <t t-if="o.state not in ['approve','paid']">
                        <t t-call="report.external_layout">
                            <div class="page">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div>只有审核通过的单据才可以打印</div>
                                    </div>
                                </div>
                            </div>

                        </t>

                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>
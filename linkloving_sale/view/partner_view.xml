<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sale_action_partner_form" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">
                [('customer','=','1'),('is_company','=',True),('is_order','=',True),('public_partners','!=','public')]
            </field>
            <field name="context">{'default_customer':True,'default_is_company':True}
            </field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a contact in your address book.
                </p>
                <p>
                    Odoo helps you easily track all activities related to
                    a customer; discussions, history of business opportunities,
                    documents, etc.
                </p>
            </field>
        </record>
        <menuitem id="sales_team.menu_partner_form" parent="sales_team.menu_sales" action="sale_action_partner_form"
                  sequence="2"/>


        <menuitem action="product_template_action"
                  id="sale.menu_product_template_action"
                  parent="sales_team.menu_sales" sequence="13"/>


        <record id="view_partner_form_linkloving" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='company_type']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='mobile']" position="replace">
                    <field name="mobile" required="0"
                           attrs="{'invisible':[('customer','=',True),('is_company','=',True)]}"/>
                </xpath>
                <xpath expr="//field[@name='category_id']" position="before">
                    <field name="team_id"
                           attrs="{'invisible': [('supplier','=', True)],'required':[('customer','=', True)]}"/>
                </xpath>

                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="internal_code" required="False" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="x_qq" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='lang']" position="after">
                    <field name="level" attrs="{'invisible': [('customer','!=', True)]}"/>
                </xpath>


                <!--<xpath expr="//form/sheet/notebook/page/field[@name='child_ids']/form/sheet/group/group/field[@name='function']"-->
                <!--position="attributes">-->
                <!--<attribute name="string">职位</attribute>-->
                <!--</xpath>-->


            </field>
        </record>


    </data>
</openerp>
        <record id="linkloving_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('supplier','=',True),('is_company','=',True)]</attribute>
                </xpath>


                <xpath expr="//field[@name='order_line']" position="after">
                    <group>
                        <field name="product_count" readonly="1" string="总数量"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="after">
                        <field name="picking_type_id"/>
                </xpath>
                  <xpath expr="//field[@name='partner_ref']" position="replace">
                        <field name="tax_id" domain="[('type_tax_use','&lt;&gt;','purchase')]"/>
                </xpath>
            </field>
        </record>



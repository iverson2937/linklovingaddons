        <record model="ir.ui.view" id="view_picking_internal_search_inherit">
            <field name="name">stock.picking.search.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//group/filter[1]" position="replace">
                </xpath>
                <xpath expr="//filter[@name='picking_type']" position="after">
                    <filter name="picking_state" string="Status"
                            domain="[('state','!=','cancel')]"
                            context="{'group_by':'state'}"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="origin"/>
                </xpath>

            </field>
        </record>


        <record id="stock.action_picking_tree_all" model="ir.actions.act_window">
            <field name="name">Stock Operations</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain">[]</field>
            <field name="context">{
                'contact_display': 'partner_address',
                'search_default_picking_state' : 1,
                'search_default_picking_type' : 1,
                }
            </field>
            <field name="search_view_id" ref="view_picking_internal_search_inherit"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new transfer.
                </p>
                <p>
                    You can either do it immediately or mark it as Todo for future processing. Use your scanner to
                    validate the transferred quantity quicker.
                </p>
            </field>
        </record>


        <menuitem id="stock_picking_confirm" action="action_stock_picking_confirm"
                  parent="purchase.menu_purchase_control"
                  sequence="5"/>


        <!-- Inherit Form View to Modify it -->
        <record id="linkloving_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="delivery_rule"/>
                </xpath>

            </field>
        </record>


        <!-- stock.inventory.tree -->
        <record id="linkloving_stock_view_inventory_tree" model="ir.ui.view">
            <field name="name">stock.inventory.tree</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='state']" position="after">
                    <field name="create_uid"/>
                </xpath>

            </field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="view_immediate_transfer_inherit" model="ir.ui.view">
            <field name="name">stock.immediate.transfer.inherit</field>
            <field name="model">stock.immediate.transfer</field>
            <field name="inherit_id" ref="stock.view_immediate_transfer"/>
            <field name="arch" type="xml">

                <xpath expr="//group/p" position="replace">
                    <p>
                        未填写收货数量
                    </p>
                    <!-- Add your fields or attributes here -->
                </xpath>
                <xpath expr="//footer/button[@name='process']" position="attributes">
                    <attribute name="string">批量收货</attribute>
                </xpath>

            </field>
        </record>

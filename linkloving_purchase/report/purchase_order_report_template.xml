<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase.report_purchaseorder_document">

        <t t-call="report.external_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>

            <div t-if="o.state in ['purchase','done']" class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <div class="col-xs-6">
                        <strong>送货地址:</strong>
                        <div t-if="o.dest_address_id">
                            <div t-field="o.dest_address_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                        </div>

                        <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                            <span t-field="o.picking_type_id.warehouse_id.name"/>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id.child_ids"
                                 t-options='{"widget": "contact", "fields": ["address","name","phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </div>
                    <div class="col-xs-5 col-xs-offset-1">
                        <div t-field="o.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                        <p t-if="o.partner_id.vat">VAT:
                            <span t-field="o.partner_id.vat"/>
                        </p>
                    </div>
                </div>

                <h2 t-if="o.state != 'draft'">订单号
                    <span t-field="o.name"/>
                </h2>
                <h2 t-if="o.state == 'draft'">报价单号 #
                    <span t-field="o.name"/>
                </h2>

                <div class="row mt32 mb32">
                    <div t-if="o.name" class="col-xs-3">
                        <strong>Our Order Reference:</strong>
                        <p t-field="o.name"/>
                    </div>
                    <div t-if="o.partner_ref" class="col-xs-3">
                        <strong>Your Order Reference</strong>
                        <p t-field="o.partner_ref"/>
                    </div>
                    <div t-if="o.date_order" class="col-xs-3">
                        <strong>订购日期:</strong>
                        <p t-field="o.date_order"/>
                    </div>
                    <div t-if="o.user_id" class="col-xs-3">
                        <strong>联系人:</strong>
                        <p t-field="o.user_id.name"/>
                    </div>
                    <div t-if="o.remark" class="col-xs-3">
                        <strong>备注:</strong>
                        <p t-field="o.remark"/>
                    </div>
                </div>

                <table class="table table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th>
                                <strong>说明</strong>
                            </th>
                            <th>
                                <strong>规格</strong>
                            </th>
                            <th>
                                <strong>供应商码</strong>
                            </th>
                            <th>
                                <strong>交期</strong>
                            </th>
                            <!--<th class="text-center"><strong>Date Req.</strong></th>-->
                            <th class="text-right">
                                <strong>Qty</strong>
                            </th>
                            <th class="text-right">
                                <strong>Unit Price</strong>
                            </th>
                            <th class="text-right">
                                <strong>Net Price</strong>
                            </th>
                            <th>
                                <strong>Taxes</strong>
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="line">
                            <td>
                                <span t-field="line.product_id.display_name"/>
                            </td>
                            <td>
                                <span t-field="line.product_id.product_specs"/>
                            </td>
                            <td>
                                <span t-field="line.supplier_product_code"/>
                            </td>
                            <td class="text-center">
                                <span t-field="o.handle_date"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.product_qty"/>
                                <span t-field="line.product_uom.name" groups="product.group_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_unit"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_subtotal"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                            <td>
                                <span t-field="o.tax_id.name"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-bordered table-condensed">
                            <tr class="border-black">
                                <td>
                                    <strong>Total Without Taxes</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Taxes</td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td>
                                    <strong>Total</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_total"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <p t-field="o.notes"/>
                <div class="oe_structure"/>
                <div t-if="o.partner_id.bank_ids">
                    <strong>付款信息</strong>
                    <h5 t-field="o.partner_id.bank_ids[0].bank_id"/>
                    <h5 t-field="o.partner_id.bank_ids[0].acc_number"/>
                    <h5 t-field="o.partner_id.bank_ids[0].owner"/>

                </div>
                <div t-if="o.payment_term_id">
                    <strong>Payment Term</strong>
                    <h5 t-field="o.payment_term_id"/>
                </div>

                <div class="oe_structure" style="max-width:100;min-width:100;"/>
                <br/>
                <div class="col-xs-12">
                    <div class="col-xs-6 text-left" style="padding:40px;">
                        <strong>填写人:</strong>
                        <img t-if="o.create_uid.employee_ids"
                             t-att-src="'data:image/png;base64,%s' % o.create_uid.employee_ids[0].purchase_signature"
                             style="position:absolute; z-index:2;top: 0;width: 48%;"/>
                    </div>
                    <div class="col-xs-6 text-left" style="padding:40px;">
                        <strong>供应商:</strong>
                    </div>

                </div>
                <div class="col-xs-12">
                    <div class="col-xs-6 text-left" style="padding:40px;">
                        <strong>审核人:</strong>
                    </div>
                    <div class="col-xs-6 text-left" style="padding:40px;">
                        <strong>审核人:</strong>
                    </div>
                </div>
                <br/>
            </div>
            <div t-if="o.state not in ['purchase','done']" class="page">
                <div class="text-center">
                    <strong>只有审核过的采购单才可以打印</strong>
                </div>


            </div>


        </t>


    </template>

    <template id="report_purchaseorder">
        <t t-call="report.html_container">

            <t t-foreach="docs" t-as="o">
                <t t-call="purchase.report_purchaseorder_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>

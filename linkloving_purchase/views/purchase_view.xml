        <record id="purchase_order_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//tree" position="replace">
                    <tree fonts="bold:message_unread==True" default_order="create_date desc"
                          decoration-danger="(state not in ('cancel','purchase')) and handle_date &lt; current_date"
                          string="采购单">
                        <field name="message_unread" invisible="1"/>
                        <field name="name" string="单号"/>
                        <field name="partner_id"/>
                        <field name="product_count" string="汇总数量"/>
                        <field name="amount_total" string="汇总金额"/>
                        <field name="product_id" string="产品"/>
                        <field name="handle_date" string="交期" widget="date"/>
                        <field name="shipping_status" invisible="1"/>

                        <field name="shipping_rate" widget="progressbar"/>
                        <field name="state"/>
                        <field name="invoice_status" string="对账单状态"/>
                    </tree>

                </xpath>

            </field>
        </record>

        <record id="purchase_order_tree_ll" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit</field>
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
                <tree fonts="bold:message_unread==True" default_order="create_date desc"
                      colors="grey:state=='cancel';blue:state in ('wait','confirmed');red:state in ('except_invoice','except_picking')"
                      string="采购单">

                    <field name="message_unread" invisible="1"/>
                    <field name="name" string="单号"/>
                    <field name="partner_id"/>
                    <field name="product_count" string="汇总数量"/>
                    <field name="amount_total" string="汇总金额"/>
                    <field name="product_id" string="产品"/>
                    <field name="shipping_rate" widget="progressbar"/>
                    <field name="state"/>

                    <!--<field name="message_unread" invisible="1"/>-->
                    <!--<field name="name" string="单号"/>-->
                    <!--<field name="product_id"/>-->
                    <!--<field name="product_qty" string="数量"/>-->
                    <!--<field name="partner_id"/>-->
                    <!--<field name="state"/>-->
                    <!--<field name="create_uid"/>-->
                </tree>
            </field>
        </record>

        <record id="linkloving_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field/tree/field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/sheet/notebook/page/field[@name='name']" position="after">
                    <field name="output_rate"/>
                </xpath>
                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state', 'in', ('done', 'cancel','purchase'))]}</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="replace">
                    <button name="button_cancel" states="draft,to approve,sent,purchase" type="object" string="取消订单"
                            confirm="确定取消吗？"/>
                </xpath>
                <xpath expr="//button[@name='button_done']" position="replace">
                    <button name="button_done" type="object" string="标记完成" states="purchase"
                            confirm="确定标记为完成吗？"/>
                </xpath>
                <xpath expr="//button[@name='button_unlock']" position="replace">
                    <button name="button_unlock" type="object" string="取消标记完成" states="done"/>
                </xpath>

                <xpath expr="//tree/field[@name='date_planned']" position="replace">
                    <field name="date_planned" string="交期" widget="date"/>
                </xpath>
                <xpath expr="//tree/field[@name='account_analytic_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='analytic_tag_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>


                <xpath expr="//tree/field[@name='product_uom']" position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                </xpath>


                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id"
                           context="{'search_default_supplier':1, 'default_supplier':1, 'default_customer':0}"
                           domain="[('supplier','=',True),('is_company','=',True)]" options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="handle_date" required="1" string="交期"/>
                    <field name="remark" string="Remark"/>
                </xpath>
                <xpath expr="//field[@name='qty_received']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
                <xpath expr="//field[@name='qty_invoiced']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>


                <xpath expr="//tree/field[@name='product_id']" position="after">
                    <field name="product_specs" readonly="1"/>
                    <field name="qty_available"/>
                </xpath>

                <xpath expr="//tree/field[@name='taxes_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//tree/field[@name='product_id']" position="replace">
                    <field name="product_id" options="{'no_create': True}"/>
                </xpath>

                <xpath expr="//tree/field[@name='sequence']" position="replace">
                </xpath>


                <xpath expr="//field[@name='amount_untaxed']" position="before">
                    <field name="product_count" string="总数量"/>
                </xpath>
                <xpath expr="//field[@name='partner_ref']" position="replace">
                    <field name="tax_id" domain="[('type_tax_use','&lt;&gt;','sale')]" required="1"/>
                </xpath>
            </field>
        </record>

        <record id="purchase.res_partner_view_purchase_account_buttons" model="ir.ui.view">
            <field name="name">res.partner.view.purchase.account.buttons</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="20"/>
            <field name="groups_id"
                   eval="[(4, ref('account.group_account_invoice')),(4, ref('purchase.group_purchase_user'))]"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="%(purchase.act_res_partner_2_supplier_invoices)d" type="action"
                            attrs="{'invisible': [('supplier', '=', False)]}" icon="fa-pencil-square-o"
                            help="Vendor Bills">
                        <field string="Vendor Bills." name="supplier_invoice_count" widget="statinfo"/>
                    </button>
                </div>

                <!--<xpath expr="//div/button[@icon='fa-clock-o']" position="attributes">-->
                <!--<attribute name="invisible">True</attribute>-->
                <!--</xpath>-->

                <!--<xpath expr="//div/button/field[@name='meeting_count']" position="attributes">-->
                <!--<attribute name="string">行事历</attribute>-->
                <!--</xpath>-->

            </field>
        </record>


        <record id="sale_order_view_search_inherit_remark" model="ir.ui.view">
            <field name="name">purchase.order.search.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='approved']" position="after">
                    <field name="remark" filter_domain="[('remark','ilike',self)]" string="Remark"/>
                    <field name="origin" filter_domain="[('origin','ilike',self)]" string="源单据"/>
                    <filter string="My Purchase Order" domain="[('create_uid','=',uid)]"
                            name="my_purchase_orders_filter"/>
                    <separator/>
                    <filter string="未入库" domain="[('shipping_rate','=',0)]" name="no"/>
                    <filter string="部分入库"
                            domain="['&amp;', ('shipping_rate','&gt;', 0), ('shipping_rate', '&lt;', 100)]"
                            name="part_shipping"/>
                    <filter string="入库完成" domain="[('shipping_rate','&gt;=',100)]" name="done"/>
                    <separator/>

                </xpath>
            </field>
        </record>

        <!--自定义供应商 tree 显示-->

        <record id="res_partner_supplier_tree" model="ir.ui.view">
            <field name="name">res.partner.supplier.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Supplier">
                    <field name="internal_code"/>
                    <field name="display_name" string="Name"/>
                    <!--<field name="qq"/>-->
                    <field name="category_id"/>
                    <field name="phone"/>
                    <field name="detailed_address"/>
                    <field name="comment"/>
                </tree>
            </field>
        </record>
        <record id="base.action_partner_supplier_form" model="ir.actions.act_window">
            <field name="name">Vendors</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="domain">[('supplier','=','1')]</field>
            <field name="view_id" ref="res_partner_supplier_tree"/>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'default_customer': 0,'default_supplier': 1,'default_is_company':True}</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a contact in your address book.
                </p>
                <p>
                    Odoo helps you easily track all activities related to
                    a supplier: discussions, history of purchases,
                    documents, etc.
                </p>
            </field>
        </record>


        <record id="account_invoice_confirm_view" model="ir.ui.view">
            <field name="name">purchase.order.cancel.form</field>
            <field name="model">purchase.order.cancel</field>
            <field name="arch" type="xml">
                <form string="Confirm Draft Invoices">
                    <p class="oe_grey">
                        Are you sure to cancel the order？
                    </p>
                    <footer>
                        <button string="Confirm" name="order_cancel" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_purchase_order_cancel"
                    multi="True"
                    key2="client_action_multi" name="Cancel Draft Purchase Order"
                    res_model="purchase.order.cancel" src_model="purchase.order"
                    view_mode="form" target="new" view_type="form"/>


        <record id="manual_combine_po" model="ir.ui.view">
            <field name="name">manual.combine.po.form</field>
            <field name="model">manual.combine.po</field>
            <field name="arch" type="xml">
                <form string="合并采购订单">
                    <p class="oe_grey">
                        是否合并所选采购订单？
                    </p>
                    <footer>
                        <button string="确认" name="action_confirm" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="取消" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_purchase_order_combine"
                    multi="True"
                    key2="client_action_multi" name="合并采购单"
                    res_model="manual.combine.po" src_model="purchase.order"
                    view_mode="form" target="new" view_type="form"/>

        <menuitem id="purchase.menu_procurement_management" name="Purchase"
                  parent="purchase.menu_purchase_root" sequence="4"/>

        <record id="purchase_order_line_tree_inherit" model="ir.ui.view">
            <field name="name">订单明细行</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="default_order">create_date desc</attribute>
                </xpath>
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_planned']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_planned']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='product_qty']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>


                <xpath expr="//field[@name='price_unit']" position="before">
                    <field name="product_qty" string="下单数量"/>
                    <field name="qty_received" string="已接收数量"/>
                    <field name="to_ship_qty"/>
                    <field name="qty_invoiced" string="开单数量"/>
                    <field name="shipping_status" string="出货状态"/>
                    <field name="invoice_status"/>
                </xpath>
            </field>
        </record>


        <record id="action_purchase_order_line" model="ir.actions.act_window">
            <field name="name">订单明细行</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a contact in your address book.
                </p>
                <p>
                    Odoo helps you easily track all activities related to
                    a supplier: discussions, history of purchases,
                    documents, etc.
                </p>
            </field>
        </record>


        <menuitem action="action_purchase_order_line"
                  id="menu_purchase_order_line"
                  name="订单明细行"
                  parent="linkloving_purchase.menu_purchase_order"
                  sequence="80"/>


    </data>
</openerp>
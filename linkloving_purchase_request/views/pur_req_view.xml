<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="purchase_order_form_req">
            <field name="name">purchase.order.form.req</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="validator" position="before">
                    <field name="req_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pur_req_form">
            <field name="name">pur.req.form</field>
            <field name="model">pur.req</field>
            <field name="arch" type="xml">
                <form string="Purchase Requisition" version="7.0">
                    <header>
                        <button name="pur_req_confirm" states="draft,rejected" string="Confirm" class="oe_highlight"/>
                        <button name="pur_req_approve" states="confirmed" string="Approve" class="oe_highlight"
                        />
                        <button name="pur_req_reject" states="confirmed" string="Reject"
                        />
                        <button name="%(act_pur_req_po)d" string="Generate PO" type="action"

                                attrs="{'invisible': [('state','!=','approved')]}" class="oe_highlight"/>
                        <button name="pur_req_done" string="Done"
                                attrs="{'invisible': [('state','!=','in_purchase')]}" class="oe_highlight"/>
                        <button name="pur_req_cancel" states="draft,confirmed,approved,rejected,in_purchase"
                                string="Cancel"/>
                        <button name="action_cancel_draft" states="cancel" string="Set to Draft" type="object"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirmed,approved,in_purchase,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label string="Purchase Requisition "/>
                                <field name="name" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="user_id"/>
                                <field name="warehouse_id"/>
                            </group>
                            <group>
                                <field name="date_request"/>
                                <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                            </group>
                            <group>
                            </group>
                        </group>

                        <separator string="Prodcuts"/>
                        <field name="line_ids">
                            <tree string="Products">
                                <field name="product_id"/>
                                <field name="product_qty"/>
                                <field name="po_info"/>
                                <field name="product_qty_remain" readonly="1"/>
                                <field name="product_uom_id"/>
                                <field name="date_required"/>
                                <field name="inv_qty"/>
                                <field name="inv_uom_id"/>
                                <field name="req_emp_id"/>
                                <field name="req_dept_id"/>
                                <field name="req_reason"/>
                                <field name="req_ticket_no"/>
                            </tree>
                            <form string="Products" version="7.0">
                                <group>
                                    <group>
                                        <field name="product_id" on_change="onchange_product_id(product_id)"/>
                                        <field name="product_qty"/>
                                        <field name="product_uom_id"/>
                                        <field name="date_required"/>
                                        <field name="inv_qty"/>
                                        <field name="inv_uom_id"/>
                                    </group>
                                    <group>
                                        <field name="req_emp_id"/>
                                        <field name="req_dept_id"/>
                                        <field name="req_reason"/>
                                        <field name="req_ticket_no"/>
                                        <field name="product_qty_remain" readonly="1"/>
                                        <field name="generated_po"/>
                                    </group>
                                </group>
                                <field name="po_lines_ids"/>
                            </form>
                        </field>

                        <separator string="Remark"/>
                        <field name="remark" class="oe_inline" placeholder="Remark..."/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_pur_req_tree">
            <field name="name">pur.req.tree</field>
            <field name="model">pur.req</field>
            <field name="arch" type="xml">
                <tree fonts="bold:message_unread==True"
                      colors="blue:state == 'confirmed';green:state == 'in_purchase';grey:state == 'cancel';"
                      string="Purchase Requisition">
                    <field name="message_unread" invisible="1"/>
                    <field name="name"/>
                    <field name="warehouse_id"/>
                    <field name="user_id"/>
                    <field name="date_request"/>
                    <field name="company_id" groups="base.group_multi_company" widget="selection"/>
                    <field name="full_gen_po"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_pur_req_filter" model="ir.ui.view">
            <field name="name">pur.req.list.select</field>
            <field name="model">pur.req</field>
            <field name="arch" type="xml">
                <search string="Search Purchase Requisition">
                    <field name="name" string="Purchase Requisition"/>
                    <filter icon="terp-document-new" name="draft" string="Draft" domain="[('state','=','draft')]"/>
                    <filter icon="terp-camera_test" name="confirmed" string="Confirmed"
                            domain="[('state','=','confirmed')]"/>
                    <filter icon="terp-camera_test" name="approved" string="Approved"
                            domain="[('state','=','approved')]"/>
                    <filter icon="terp-camera_test" name="in_purchase" string="In Purchasing"
                            domain="[('state','=','in_purchase')]"/>
                    <filter icon="terp-camera_test" name="done" string="Done" domain="[('state','=','done')]"/>
                    <separator/>
                    <filter icon="terp-personal-" string="Cancelled" domain="[('state','=', 'cancel')]"
                            help="Canceled  Requisition"/>
                    <field name="warehouse_id"/>
                    <field name="user_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Requester" icon="terp-personal" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter string="Warehouse" icon="terp-gtk-jump-to-rtl" domain="[]"
                                context="{'group_by':'warehouse_id'}"/>
                        <filter string="Requisition Date" icon="terp-go-month" domain="[]"
                                context="{'group_by':'date_request'}"/>
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]"
                                context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_pur_req">
            <field name="name">Purchase Requisitions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pur.req</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pur_req_filter"/>
        </record>

        <menuitem
                id="menu_pur_req"
                sequence="9"
                parent="purchase.menu_procurement_management"
                action="action_pur_req"
                groups="base.group_user,ydit_pur_req.group_pur_req_requester,ydit_pur_req.group_pur_req_checker,ydit_pur_req.group_pur_req_buyer"/>

        <!-- pur request line -->
        <record model="ir.ui.view" id="view_pur_req_line_full_tree">
            <field name="name">pur.req.line.tree</field>
            <field name="model">pur.req.line</field>
            <field name="arch" type="xml">
                <tree fonts="bold:generated_po==True"
                      colors="red:(generated_po==True and po_info != product_qty);green:generated_po==True;blue:order_state == 'confirmed';green:order_state == 'in_purchase';grey:order_state == 'cancel';"
                      string="Purchase Requisition Lines">
                    <field name="req_id"/>
                    <field name="product_id" on_change="onchange_product_id(product_id)"/>
                    <field name="product_qty"/>
                    <field name="generated_po"/>
                    <field name="po_info"/>
                    <field name="product_uom_id"/>
                    <field name="date_required"/>
                    <field name="inv_qty"/>
                    <field name="req_emp_id"/>
                    <field name="req_dept_id"/>
                    <field name="req_reason"/>
                    <field name="req_ticket_no"/>
                    <field name="order_warehouse_id"/>
                    <field name="order_user_id"/>
                    <field name="order_date_request"/>
                    <field name="order_state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_pur_req_line_full_form">
            <field name="name">view_pur_req_line_full_form</field>
            <field name="model">pur.req.line</field>
            <field name="arch" type="xml">
                <form string="Products" version="7.0">
                    <group>
                        <group>
                            <field name="req_id" readonly="1"/>
                            <field name="order_warehouse_id"/>
                            <field name="order_user_id"/>
                            <field name="order_date_request"/>
                            <field name="order_state"/>
                            <field name="req_emp_id" readonly="1"/>
                            <field name="req_ticket_no" readonly="1"/>
                            <field name="req_reason" readonly="1"/>
                        </group>
                        <group>
                            <field name="product_id" readonly="1"/>
                            <field name="product_qty" readonly="1"/>
                            <field name="po_info"/>
                            <field name="product_uom_id" readonly="1"/>
                            <field name="date_required" readonly="1"/>
                            <field name="inv_qty" readonly="1"/>
                            <field name="generated_po"/>
                        </group>
                    </group>
                    <div>
                        <label for="po_lines_ids"/>
                        <field name="po_lines_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_pur_req_line_full_filter" model="ir.ui.view">
            <field name="name">pur.req.list.select</field>
            <field name="model">pur.req.line</field>
            <field name="arch" type="xml">
                <search string="Search Purchase Requisition Lines">
                    <field name="product_id" string="Purducts"/>
                    <field name="req_id" string="Purchase Requisition"/>
                    <filter icon="terp-document-new" name="draft" string="Draft"
                            domain="[('order_state','=','draft')]"/>
                    <filter icon="terp-camera_test" name="confirmed" string="Confirmed"
                            domain="[('order_state','=','confirmed')]"/>
                    <filter icon="terp-camera_test" name="in_purchase" string="In Purchasing"
                            domain="[('order_state','=','in_purchase')]"/>
                    <filter icon="terp-camera_test" name="done" string="Done" domain="[('order_state','=','done')]"/>
                    <separator/>
                    <filter icon="terp-personal-" string="Cancelled" domain="[('order_state','=', 'cancel')]"
                            help="Canceled  Requisition"/>
                    <field name="order_warehouse_id"/>
                    <field name="order_user_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Requester" icon="terp-personal" domain="[]"
                                context="{'group_by':'order_user_id'}"/>
                        <filter string="Warehouse" icon="terp-gtk-jump-to-rtl" domain="[]"
                                context="{'group_by':'order_warehouse_id'}"/>
                        <filter string="Requisition Date" icon="terp-go-month" domain="[]"
                                context="{'group_by':'order_date_request'}"/>
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]"
                                context="{'group_by':'order_state'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_pur_req_line_full">
            <field name="name">Purchase Requisition Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pur.req.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pur_req_line_full_filter"/>
        </record>
        <record model="ir.actions.act_window.view" id="action_pur_req_line_full_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_pur_req_line_full_tree"/>
            <field name="act_window_id" ref="action_pur_req_line_full"/>
        </record>
        <record model="ir.actions.act_window.view" id="action_pur_req_line_full_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_pur_req_line_full_form"/>
            <field name="act_window_id" ref="action_pur_req_line_full"/>
        </record>
        <menuitem
                id="menu_pur_req_line_full"
                sequence="10"
                parent="purchase.menu_procurement_management"
                action="action_pur_req_line_full"
                groups="ydit_pur_req.group_pur_req_requester,ydit_pur_req.group_pur_req_checker,ydit_pur_req.group_pur_req_buyer"/>

    </data>
</openerp>

        <record id="view_leads_form" model="ir.ui.view">
            <field name="name">crm.lead.form.leads</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='country_id']" position="after">
                    <field name="continent" placeholder="大洲"/>
                    <field name="lead_is_quote" invisible="1"/>
                    <field name="lead_is_sample" invisible="1"/>
                    <field name="lead_is_follow_up" invisible="1"/>

                </xpath>
                <!--右-->
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="qq"/>
                    <field name="mutual_rule_id" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='qq']" position="after">
                    <field name="wechat"/>
                </xpath>

                <xpath expr="//field[@name='wechat']" position="after">
                    <field name="whatsapp"/>
                </xpath>

                <xpath expr="//field[@name='whatsapp']" position="after">
                    <field name="skype"/>
                </xpath>
                <xpath expr="//field[@name='skype']" position="after">
                    <field name="communication_identifier"/>
                </xpath>


                <!--左-->

                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="crm_source_id" options="{'no_create': True}"
                           required="True"/>
                </xpath>
                <xpath expr="//field[@name='crm_source_id']" position="after">
                    <field name="express_sample_record"/>
                </xpath>


                <!--<xpath expr="//field[@name='express_sample_record']" position="after">-->
                <!---->
                <!--</xpath>-->

                <xpath expr="//page[@name='extra']" position="after">
                    <page string="产品" attrs="{'invisible': True}">
                        <field name="interested_in_product"
                               domain="[('sale_ok','=',True)]" widget="list_new_view"
                               context="{'search_default_rteng':1,'search_default_filter_categ_id':1}"/>
                    </page>
                    <page string="产品">
                        <field name="product_series_ids" widget="crm_tree_list_js"
                               attrs="">
                            <tree string="产品系列" default_order="crm_product_type"
                                  create="0">
                                <field name="crm_product_type"/>
                                <field name="name"/>
                                <field name="detail"/>
                                <field name="crm_Parent_id"/>
                                <field name="crm_Parent_ontomany_ids"/>
                            </tree>
                        </field>
                        <button string="添加型号" name="action_tree_list_view" type="object"
                                class="btn-primary" groups=""/>
                        <div class="oe_clear"/>
                    </page>

                </xpath>


            </field>
        </record>



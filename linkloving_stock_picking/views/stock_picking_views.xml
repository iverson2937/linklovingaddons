        <record id="stock_move_linkloving_stock" model="ir.ui.view">
            <field name="name">stock.move.form.stock</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='picking_type_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='create_date']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='move_dest_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='priority']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>


                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='date']" position="after">
                    <field name="date" string="操作日期"/>
                    <field name="reason_stock"/>
                </xpath>


                <xpath expr="//field[@name='date']" position="before">
                    <field name="create_uid"/>
                    <field name="date_expected"/>
                    <field name="write_uid" string="操作人"/>
                </xpath>

            </field>
        </record>

        <record id="view_move_picking_tree_inherit" model="ir.ui.view">
            <field name="name">stock.move.tree.stock</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>

                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="view_stock_picking_tree">
            <field name="name">stock.picking.wave.inherit.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="create_uid"/>
                    <field name="create_date" widget="date"/>
                </xpath>

                <xpath expr="//field[@name='min_date']" position="attributes">
                    <attribute name="widget">date</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                </xpath>
            </field>
        </record>
        <record id="action_stock_picking_confirm" model="ir.actions.act_window">
            <field name="name">Confirm Receipts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('picking_type_code','=','incoming'),('state','=','validate')]</field>
            <field name="context">{'picking_type_code':'incoming'}</field>
            <field name="help" type="html">
                <p>
                    No Stock Move to confirm.
                </p>
            </field>
        </record>



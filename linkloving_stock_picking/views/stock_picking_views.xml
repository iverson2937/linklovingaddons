<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_stock_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='do_new_transfer']" position="before">
                    <button name="action_post" string="Submit" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|',('picking_type_code', '!=', 'incoming'),('state','not in',['partially_available','assigned'])]}"
                            groups="stock.group_stock_user"/>

                </xpath>
                <!--<xpath expr="//button[@name='action_cancel']" position="after">-->
                <!--<button name="check_purchase_order_line" string="赋值源采购行" type="object" class="oe_highlight"-->
                <!--groups="base.group_erp_manager"/>-->
                <!--</xpath>-->


                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="string">取消订单</attribute>

                </xpath>


                <xpath expr="//button[@name='%(stock.act_stock_return_picking)d']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>


                <xpath expr="//button[@name='do_new_transfer']" position="replace">

                    <button name="to_stock" string="出库" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state','not in',['waiting_out'])]}"
                            groups="stock.group_stock_user"/>
                    <button name="to_stock" string="入库" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state','not in',['waiting_in'])]}"
                            groups="stock.group_stock_user"/>
                    <button name="do_new_transfer" string="出库调拨"
                            attrs="{'invisible': ['|',('picking_type_code', 'not in', ['outgoing', 'internal']),('state','not in',['assigned'])]}"
                            groups="stock.group_stock_user" type="object" class="oe_highlight"/>
                    <!--<button name="start_prepare_stock" string="开始备货"-->
                    <!--attrs="{'invisible': ['|',('picking_type_code', '=', 'incoming'),('state','not in',['assigned'])]}"-->
                    <!--groups="stock.group_stock_user" type="object" class="oe_highlight"/>-->
                    <!--<button name="stock_ready" string="备货完成"-->
                    <!--attrs="{'invisible': ['|',('picking_type_code', '=', 'incoming'),('state','not in',['prepare'])]}"-->
                    <!--groups="stock.group_stock_user" type="object" class="oe_highlight"/>-->
                    <button name="action_view_qc_result" string="查看品检结果"
                            attrs="{'invisible': ['|',('picking_type_code', '!=', 'incoming'),('state','in',['draft', 'assigned', 'qc_check'])]}"
                            groups="purchase.group_purchase_user" type="object" class="oe_highlight"/>
                    <!--<button name="do_new_transfer" string="Confirm Receipts"-->
                    <!--attrs="{'invisible': ['|',('picking_type_code', '=', 'outgoing'),('state','not in',['validate'])]}"-->
                    <!--groups="purchase.group_purchase_user" type="object" class="oe_highlight"/>-->
                    <!--&lt;!&ndash;<button name="reject" string="Reject"&ndash;&gt;-->
                    <!--attrs="{'invisible': ['|',('picking_type_code', '=', 'outgoing'),('state','not in',['validate'])]}"-->
                    <!--groups="purchase.group_purchase_user" type="object" class="oe_highlight"/>-->
                </xpath>
                <xpath expr="//field[@name='location_id']" position="after">
                    <field name="tracking_number" string="Tracking Number"/>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="remark" string="原单据备注"/>
                </xpath>


                <xpath expr="//field[@name='pack_operation_product_ids']//tree//field[@name='product_id']"
                       position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                </xpath>


                <xpath expr="//field[@name='origin']" position="after">
                </xpath>
                <!--<xpath expr="//notebook/page[1]" position="after">-->
                <!--<page string="采购单信息">-->
                <!--<field name="purchase_order_line"/>-->
                <!--</page>-->
                <!--</xpath>-->
                <!--<xpath expr="//notebook/page[1]" position="after">-->
                <!--<page string="销售单信息">-->
                <!--<field name="sale_order_line"/>-->
                <!--</page>-->
                <!--</xpath>-->
                <!--<xpath expr="//notebook/page[1]" position="after">-->
                <!--<page string="采购单信息">-->
                <!--<field name="order_line"/>-->
                <!--</page>-->
                <!--</xpath>-->


                <xpath expr="//button[@name='action_see_move_scrap']" position="before">


                    <button type="object"
                            name="stock_img_count"
                            class="oe_stat_button"
                            icon="fa-photo fa-image fa-picture-o"
                            context="{'type_btn':'Inspection'}"
                            groups="">
                        <field name="qc_img_count" widget="statinfo" string="品检信息"/>
                    </button>

                    <button type="object"
                            name="stock_img_count"
                            class="oe_stat_button"
                            icon="fa-photo fa-image fa-picture-o"
                            context="{'type_btn':'Logistical'}"
                            groups="">
                        <field name="attachment_img_count" widget="statinfo" string="物流信息"/>
                    </button>
                </xpath>


            </field>
        </record>


        <record id="view_move_trees_stock" model="ir.ui.view">
            <field name="name">stock.move.tree.stock</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//tree" position="attributes">
                    <attribute name="default_order">traces_sort_state,date desc</attribute>
                </xpath>

                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="data_type" string="出入库数量"/>
                    <field name="quantity_adjusted_qty" string="当前库存"/>
                </xpath>

                <xpath expr="//field[@name='product_uom_qty']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>


                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='location_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='location_dest_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>


                <xpath expr="//field[@name='name']" position="before">
                    <field name="move_order_type"/>
                    <field name="state"/>
                </xpath>

                <xpath expr="//field[@name='date']" position="replace">
                    <field name="date" string="完成日期" groups=""/>
                </xpath>

                <!--<xpath expr="//field[@name='product_uom']" position="after">-->
                <!--<field name="create_uid"/>-->
                <!--</xpath>-->


                <xpath expr="//field[@name='date_expected']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>


                <xpath expr="//field[@name='date_expected']" position="after">
                    <field name="write_uid" string="操作人"/>
                    <!--<field name="write_date" string="操作日期"/>-->
                </xpath>


            </field>
        </record>


        <record id="stock_view_move_search" model="ir.ui.view">
            <field name="name">stock.move.search.stock</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='groupby_date']" position="after">
                    <filter string="出/入库" name="move_order_type" context="{'group_by' : 'move_order_type'}"
                            domain="[]"/>
                </xpath>

            </field>
        </record>


